rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // User data security rules
    match /users/{userId} {
      // Allow users to read and write their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to read and write to the technicians collection (if you use Firestore for technicians too)
    // match /technicians/{technicianId} {
    //   allow read, write: if request.auth != null && request.auth.uid == technicianId;
    // }

    // Notifications collection rules
    match /notifications/{notificationId} {
      // Users can read notifications sent to them
      allow read: if request.auth != null && (
        resource.data.userId == request.auth.uid || 
        resource.data.receiverId == request.auth.uid ||
        resource.data.senderId == request.auth.uid
      );
      // Users can create notifications for themselves
      allow create: if request.auth != null && (
        request.resource.data.userId == request.auth.uid ||
        request.resource.data.receiverId == request.auth.uid
      );
      // Users can mark their own notifications as seen
      allow update: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        resource.data.receiverId == request.auth.uid
      );
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
